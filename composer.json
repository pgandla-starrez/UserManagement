{
    "name": "app/user-management-refactored",
    "description": "Refactored user management system following SOLID principles",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "psr/log": "^3.0",
        "monolog/monolog": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests --level=max",
        "demo": "php example/usage.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
